<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataFragment" >

    <TextView
        android:id="@+id/altitude_level"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignBaseline="@+id/battery_level"
        android:layout_alignBottom="@+id/battery_level"
        android:layout_alignLeft="@+id/altitude_text"
        android:text=" "
        android:textSize="50sp" />

    <TextView
        android:id="@+id/battery_level"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/battery_text"
        android:layout_marginLeft="64dp"
        android:text=" "
        android:textSize="50sp" />

    <TextView
        android:id="@+id/battery_text"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_alignLeft="@+id/battery_level"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="Battery Level:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/altitude_text"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_above="@+id/altitude_level"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@+id/battery_text"
        android:text="Altitude:"
        android:textSize="25sp" />

</RelativeLayout>
